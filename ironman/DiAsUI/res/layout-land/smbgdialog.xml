<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center_vertical|center_horizontal" android:id="@+id/smbgLinear">
    <TextView android:layout_height="wrap_content" android:text="TextView" android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textViewSmbg" android:layout_width="400sp"></TextView>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="number" android:id="@+id/editTextSmbg" android:imeOptions="flagNoExtractUi">
        <requestFocus></requestFocus>
    </EditText>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/smbgLinearButtons">
        <Button android:id="@+id/buttonSmbgOk" android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="Ok" android:clickable="true"></Button>
        <Button android:id="@+id/buttonSmbgCancel" android:layout_height="fill_parent" android:layout_weight="1" android:layout_width="fill_parent" android:text="Cancel" android:clickable="true"></Button>
    </LinearLayout>    
    
</LinearLayout>
